@model ReportManagement.Models.Report

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ReportName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReportName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Duration)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Duration)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Project.ProjectName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd>
    </dl>
    <table class="table">
        <tr>
            <th>Action Name</th>
            <th>Action By</th>
            <th>Position</th>
            <th>Action Date</th>
            <th></th>

        </tr>


        @foreach (var item in Model.Actions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ActionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FirstName) @Html.DisplayFor(modelItem => item.User.LastName)
                    @Html.DisplayFor(modelItem => item.User.Position)
                </td>
                <td>
                   @Html.DisplayFor(modelItem => item.ActionDate)
                </td>
            </tr>
        }
    </table>

    @*<dd>@Html.DisplayFor(model => model.Actions.)</dd>*@
</div>
<p>
    @Html.ActionLink("Approved", "Approve", new { id = Model.ReportID }, new { @class = "btn btn-success"})
    @Html.ActionLink("Rejected", "Reject", new { id = Model.ReportID }, new { @class = "btn btn-danger" })
    @Html.ActionLink("Edit", "Edit", new { id = Model.ReportID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
